{
    "name": "intracto/smartcode-bundle",
    "type": "symfony-bundle",
    "description": "This bundle provides a way to generate software licenses with Symfony2",
    "keywords": ["software", "licenses", "generate"],
    "homepage": "https://github.com/intracto",
    "license": "MIT",
    "authors": [
        {
            "name": "Joeri Timmermans",
            "email": "info@pix-art.be"
        }
    ],

    "require": {
        "php":                             ">=5.4",
        "doctrine/orm":                    "~2.2",
        "symfony/framework-bundle":        "~2.0|~4.0",
        "symfony/validator":               "~2.0|~4.0"
    },

    "config": {
        "bin-dir": "bin"
    },

    "require-dev": {
        "phpunit/phpunit": "4.*"
    },

    "autoload": {
        "psr-4": {
            "Intracto\\SmartCodeBundle\\": "./src",
            "Intracto\\SmartCodeBundle\\Tests\\": "./tests"
        }
    }
}
